<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SearchBarView">
        <!-- Appearance -->
        <attr name="searchHint" format="string" />
        <attr name="searchIcon" format="reference" />
        <attr name="searchClearIcon" format="reference" />
        <attr name="searchBackgroundColor" format="color" />
        <attr name="searchStrokeColor" format="color" />
        <attr name="searchStrokeWidth" format="dimension" />
        <attr name="searchTextColor" format="color" />
        <attr name="searchHintTextColor" format="color" />
        <attr name="searchIconTint" format="color" />
        <attr name="searchCornerRadius" format="dimension" />
        
        <!-- Behavior -->
        <attr name="searchEnabled" format="boolean" />
        <attr name="searchSingleLine" format="boolean" />
        <attr name="searchImeOptions">
            <flag name="normal" value="0x00000000" />
            <flag name="actionGo" value="0x00000002" />
            <flag name="actionSearch" value="0x00000003" />
            <flag name="actionSend" value="0x00000004" />
            <flag name="actionNext" value="0x00000005" />
            <flag name="actionDone" value="0x00000006" />
        </attr>
    </declare-styleable>

    <dimen name="search_bar_margin">16dp</dimen>
    <dimen name="search_bar_height">56dp</dimen>
</resources>
