<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SearchBarView">
        <!-- Basic -->
        <attr name="text" format="string" />
        <attr name="hint" format="string" />
        
        <!-- Text Appearance -->
        <attr name="textColor" format="color" />
        <attr name="hintTextColor" format="color" />
        <attr name="textAppearance" format="reference" />
        <attr name="textSize" format="dimension" />
        <attr name="textStyle" format="flags">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="textFont" format="reference" />
        
        <!-- Icons -->
        <attr name="leadingIcon" format="reference" />
        <attr name="leadingIconSize" format="dimension" />
        <attr name="leadingIconPadding" format="dimension" />
        <attr name="clearIcon" format="reference" />
        <attr name="clearIconSize" format="dimension" />
        <attr name="clearIconPadding" format="dimension" />
        <attr name="iconTint" format="color" />
        
        <!-- Layout -->
        <attr name="height" format="dimension" />
        <attr name="paddingHorizontal" format="dimension" />
        <attr name="paddingVertical" format="dimension" />
        <attr name="elevation" format="dimension" />
        <attr name="backgroundColor" format="color" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        
        <!-- Input -->
        <attr name="enabled" format="boolean" />
        <attr name="singleLine" format="boolean" />
        <attr name="maxLines" format="integer" />
        <attr name="maxLength" format="integer" />
        <attr name="inputType" format="flags">
            <flag name="text" value="0x00000001" />
            <flag name="textCapCharacters" value="0x00001001" />
            <flag name="textCapWords" value="0x00002001" />
            <flag name="textCapSentences" value="0x00004001" />
        </attr>
        <attr name="imeOptions">
            <flag name="normal" value="0x00000000" />
            <flag name="actionGo" value="0x00000002" />
            <flag name="actionSearch" value="0x00000003" />
            <flag name="actionSend" value="0x00000004" />
            <flag name="actionNext" value="0x00000005" />
            <flag name="actionDone" value="0x00000006" />
        </attr>

        <!-- States -->
        <attr name="focusedBackgroundColor" format="color" />
        <attr name="focusedStrokeColor" format="color" />
        <attr name="focusedStrokeWidth" format="dimension" />
        <attr name="disabledBackgroundColor" format="color" />
        <attr name="disabledStrokeColor" format="color" />
        <attr name="disabledTextColor" format="color" />
        <attr name="disabledHintTextColor" format="color" />
        <attr name="disabledIconTint" format="color" />
    </declare-styleable>
</resources>
